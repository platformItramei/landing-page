FROM node:20 AS builder

# Use a more reliable base image variant
WORKDIR /build

# 1. Update npm and clear any potential caches
RUN npm install -g npm@latest && \
    npm cache clean --force

# 2. Copy only package files first for better layer caching
COPY package*.json ./

# 3. Install dependencies with forced optional deps and exact versions
RUN npm install --force --no-optional --legacy-peer-deps

# 4. Copy remaining files
COPY . .

# 5. Build with specific NODE_OPTIONS
RUN NODE_OPTIONS="--no-experimental-fetch" npm run build

FROM node:20-slim AS runtime
WORKDIR /app
COPY --from=builder /build/dist ./dist

# 6. Install serve globally (production only)
RUN npm install -g serve@14

ENV PORT=5174
EXPOSE 5174
CMD ["serve", "-s", "dist", "-l", "tcp://0.0.0.0:5174"]