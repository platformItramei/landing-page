FROM node:20 AS builder

# Use current directory (.) as WORKDIR
WORKDIR /build
COPY package.json package-lock.json ./
RUN npm ci --force
COPY . .
RUN npm run build

FROM node:20
WORKDIR /app
COPY --from=builder /build/dist ./dist
RUN npm install -g serve

ENV PORT=5174
EXPOSE 5174
CMD ["serve", "-s", "dist", "-l", "0.0.0.0:5174"]