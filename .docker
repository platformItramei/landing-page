FROM node:20 AS builder

WORKDIR /usr/src/app
COPY package.json package-lock.json ./
RUN npm install
COPY . .
RUN npm run build

FROM node:20

WORKDIR /usr/src/app
COPY --from=builder /usr/src/app/dist ./dist
COPY package.json ./
RUN npm install -g serve

ENV PORT=5174
EXPOSE 5174
CMD ["serve", "-s", "dist", "-l", "0.0.0.0:5174"]